{
  "name": "coditor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all build:css build:react",
    "release": "npm run build && git checkout gh-pages && sh ./build.sh",
    "build:css": "postcss src/styles/main.css -o src/styles/coditor.css --env production",
    "watch:css": "postcss src/styles/main.css -o src/styles/coditor.css -w",
    "start:react": "react-scripts start",
    "build:react": "PUBLIC_URL=. react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@babel/standalone": "^7.7.7",
    "codemirror": "^5.49.2",
    "firebase": "^7.6.1",
    "react": "^16.12.0",
    "react-codemirror2": "^6.0.0",
    "react-dom": "^16.12.0",
    "react-firebaseui": "^4.0.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "react-syntax-highlighter": "^12.2.1",
    "undux": "^5.0.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "node-sass": "^4.13.0",
    "react-test-renderer": "^16.12.0",
    "autoprefixer": "^9.7.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.1.4"
  }
}
